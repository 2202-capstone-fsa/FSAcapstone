{
  "compilerOptions": {
    // "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "out",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "public/**/*"],
  "exclude": [".git", "node_modules"]
}
